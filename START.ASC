**********************************
*PROGRAMA START
**********************************
PORTD  EQU   $1008

DDRD   EQU   $1009

SCDR   EQU   $102F
SCCR2  EQU   $102D
SCSR   EQU   $102E
SCCR1  EQU   $102C
BAUD   EQU   $102B
HPRIO  EQU   $103C
SPCR   EQU   $1028

* VARIABLES *********************

ORDEN  EQU   $0000
U1     EQU   $0001
U2     EQU   $0002
U3     EQU   $0003
U4     EQU   $0004

*INICIO_PROGRAMA *****************
	ORG $8000
	LDS #$00FF

	JSR SERIAL

   
INICIO
	CLR U4
	CLR U3
	CLR U2
BORRA_U1
	CLR U1
BORRA_ORDEN
	LDAA #'?
	STAA ORDEN

LOOP
	LDAA ORDEN
	CMPA #'?
	BEQ LOOP
	
	LDAB U1
	BNE SIGUE
	CMPA #'S
	BNE BORRA_ORDEN
	STAA U1
	JMP BORRA_ORDEN 

SIGUE
	LDAB U2
	BNE SIGUE1
	CMPA #'T
	BEQ VALIDA_T

CHECA_S
	CMPA #'S
	BNE BORRA_U1
	JMP BORRA_ORDEN

VALIDA_T
	STAA U2
	JMP BORRA_ORDEN

SIGUE1	
	LDAB 47
	BNE SIGUE2
	CMPA #'A
	BEQ VALIDA_A
CHECA_XD
	CLR U2
	JMP CHECA_S

VALIDA_A
	STAA U3
	JMP BORRA_ORDEN

SIGUE2	
	LDAB U4
	BNE SIGUE3
	CMPA #'R
	BEQ VALIDA_R

CHECA_ELPACK
	CLR U3
	JMP CHECA_XD

VALIDA_R
	STAA U4
	JMP BORRA_ORDEN

SIGUE3	
	CMPA #'T
	BEQ EXITO
	CLR U4
	JMP CHECA_ELPACK
	ABX

EXITO
	JMP INICIO
	ABA


SERIAL
        LDD   #$302C  * CONFIGURA PUERTO SERIAL
        STAA  BAUD    * BAUD  9600  para cristal de 8MHz
        STAB  SCCR2   * HABILITA  RX Y TX PERO INTERRUPCN SOLO RX
        LDAA  #$00
        STAA  SCCR1   * 8 BITS
 	
        LDAA  #$FE    * CONFIG PUERTO D COMO SALIDAS (EXCEPTO PD0)
        STAA  DDRD    * SEA  ENABLE DEL DISPLAY  PD4  Y RS PD3
                      
       
        LDAA  #$04
        STAA  HPRIO
 
        LDAA  #$00
        TAP
	RTS



***********************************
* ATENCION A INTERRUPCION SERIAL
***********************************
        ORG  $F100
 
        LDAA SCSR
        LDAA SCDR
        STAA ORDEN

        RTI

***********************************
* VECTOR INTERRUPCION SERIAL
***********************************
        ORG   $FFD6
        FCB   $F1,$00       

***********************************
*RESET
***********************************
        ORG    $FFFE
RESET   FCB    $80,$00
***********************************
        END   $8000
	




